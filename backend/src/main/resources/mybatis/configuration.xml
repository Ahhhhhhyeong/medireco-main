<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<typeAliases>
		<typeAlias type="com.medireco.vo.HospitalVo"
			alias="hospitalvo" />
		<typeAlias type="com.medireco.vo.EmployeeVo"
			alias="employeevo" />
		<typeAlias type="com.medireco.vo.DoctorVo"
			alias="doctorvo" />
		<typeAlias type="com.medireco.vo.DiseaseDataVo"
			alias="diseasedatavo" />
		<typeAlias type="com.medireco.vo.MedicineDataVo"
			alias="medicinedatavo" />
		<typeAlias type="com.medireco.vo.PrescriptionVo"
			alias="prescriptionvo" />
		<typeAlias type="com.medireco.vo.DiseaseVo"
			alias="diseasevo" />
		<typeAlias type="com.medireco.vo.TreatmentVo"
			alias="treatmentvo" />
		<typeAlias type="com.medireco.vo.DiagnosisVo"
			alias="diagnosisvo" />
		<typeAlias type="com.medireco.vo.AppointmentVo"
			alias="appointmentvo" />
		<typeAlias type="com.medireco.vo.PatientVo"
			alias="patientvo" />
		<typeAlias type="com.medireco.vo.NurseVo"
			alias="nursevo"/>
		<typeAlias type="com.medireco.vo.AttendanceScheduleVo"
			alias="attendanceschedulevo"/>
	</typeAliases>

	<mappers>
		<mapper resource="mybatis/mappers/admin.xml" />
		<mapper resource="mybatis/mappers/hospitalAdmin.xml" />
		<mapper resource="mybatis/mappers/doctor.xml" />
		<mapper resource="mybatis/mappers/nurse.xml" />
		<mapper resource="mybatis/mappers/common.xml" />
		<mapper resource="mybatis/mappers/auth.xml" />
	</mappers>
</configuration>
